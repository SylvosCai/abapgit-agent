   <FUNCTIONS>
    <item>
     <FUNCNAME>Z_ABAPGIT_AGENT_PULL</FUNCNAME>
     <REMOTE_CALL>R</REMOTE_CALL>
     <SHORT_TEXT>Trigger git pull and activation for a repository</SHORT_TEXT>
     <IMPORT>
      <RSIMP>
       <PARAMETER>IV_URL</PARAMETER>
       <TYP>STRING</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IV_BRANCH</PARAMETER>
       <DEFAULT>'main'</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <TYP>STRING</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IV_ACTIVATE</PARAMETER>
       <DEFAULT>ABAP_TRUE</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <TYP>ABAP_BOOL</TYP>
      </RSIMP>
     </IMPORT>
     <EXPORT>
      <RSEXP>
       <PARAMETER>EV_SUCCESS</PARAMETER>
       <TYP>ABAP_BOOL</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_JOB_ID</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_MESSAGE</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_ACTIVATED_COUNT</PARAMETER>
       <TYP>I</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_FAILED_COUNT</PARAMETER>
       <TYP>I</TYP>
      </RSEXP>
     </EXPORT>
     <TABLES>
      <RSTBL>
       <PARAMETER>ET_ERROR_LOG</PARAMETER>
       <TYP>STRING_TABLE</TYP>
      </RSTBL>
     </TABLES>
     <EXCEPTION>
      <RSEXC>
       <EXCEPTION>ERROR</EXCEPTION>
      </RSEXC>
     </EXCEPTION>
    </item>
    <item>
     <FUNCNAME>Z_ABAPGIT_AGENT_GET_STATUS</FUNCNAME>
     <REMOTE_CALL>R</REMOTE_CALL>
     <SHORT_TEXT>Get status and result of a pull/activation job</SHORT_TEXT>
     <IMPORT>
      <RSIMP>
       <PARAMETER>IV_JOB_ID</PARAMETER>
       <TYP>STRING</TYP>
      </RSIMP>
     </IMPORT>
     <EXPORT>
      <RSEXP>
       <PARAMETER>EV_STATUS</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_SUCCESS</PARAMETER>
       <TYP>ABAP_BOOL</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_MESSAGE</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_ACTIVATED_COUNT</PARAMETER>
       <TYP>I</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_FAILED_COUNT</PARAMETER>
       <TYP>I</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_STARTED_AT</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
      <RSEXP>
       <PARAMETER>EV_FINISHED_AT</PARAMETER>
       <TYP>STRING</TYP>
      </RSEXP>
     </EXPORT>
     <TABLES>
      <RSTBL>
       <PARAMETER>ET_ERROR_LOG</PARAMETER>
       <TYP>STRING_TABLE</TYP>
      </RSTBL>
     </TABLES>
     <EXCEPTION>
      <RSEXC>
       <EXCEPTION>ERROR</EXCEPTION>
      </RSEXC>
     </EXCEPTION>
    </item>
